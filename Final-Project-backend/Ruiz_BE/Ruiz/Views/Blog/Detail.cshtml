@inject Ruiz.Services.LayoutService  layoutService

@{
    Setting setting = layoutService.GetSetting();
}
@model Blog
@{
    ViewData["Title"] = "Detail";
}

<div class="breadcrumb-area">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <ul class="breadcrumb-list">
                    <li class="breadcrumb-item"><a href="index.html">Home</a></li>
                    <li class="breadcrumb-item active">Blog Details</li>
                </ul>
            </div>
        </div>
    </div>
</div>

<div class="main-content-wrap shop-page section-ptb">
    <div class="container">
        <div class="row">
            <div class="col-lg-3 order-lg-1 order-2">
                <div class="blog-sidebar-wrap">
                    <div class="blog-sidebar-widget-area">

                        <div class="single-widget search-widget mb-30">
                            <h4 class="widget-title">Search</h4>
                            <form action="#">
                                <div class="form-input">
                                    <input type="text" placeholder="Search... ">
                                    <button class="button-search" type="submit">
                                        <i class="icon-magnifier"></i>
                                    </button>
                                </div>
                            </form>
                        </div>
                        <div class="single-widget mb-30">
                            <h4 class="widget-title">Categories</h4>
                            <div class="category-widget-list">
                                <ul>
                                    <li><a href="#">Company</a></li>
                                    <li><a href="#">Fat</a></li>
                                    <li><a href="#">Nutrition</a></li>
                                    <li><a href="#">Protein</a></li>
                                    <li><a href="#">Wordpress</a></li>
                                </ul>
                            </div>
                        </div>

                        <div class="single-widget mb-30">
                            <h4 class="widget-title">Recent Posts</h4>

                            <div class="recent-post-widget">
                                @foreach (var item in ViewBag.Blogs)
                                {
                                    <div class="single-widget-post">
                                        <div class="post-thumb">
                                            <a href="#"><img src="~/assets/images/blog/@item.SmallImage" alt=""></a>
                                        </div>
                                        <div class="post-info">
                                            <h6 class="post-title"><a href="#">@item.Name</a></h6>
                                            <div class="post-date">@item.CreatedAt.ToString("MMM dd yyyy")</div>
                                        </div>
                                    </div>
                                }

                            </div>

                        </div>
                        <div class="single-widget mb-30">
                            <h4 class="widget-title">Archives</h4>
                            <div class="category-widget-list">
                                <ul>
                                    <li><a href="#">May 2020</a></li>
                                    <li><a href="#">Oct 2021</a></li>
                                </ul>
                            </div>
                        </div>

                        <div class="single-widget mb-30">
                            <h4 class="widget-title">Tags</h4>

                            <ul class="sidebar-tag">
                                @foreach (var item in ViewBag.Tags)
                                {
                                    <li><a href="#">@item.Name</a></li>
                                }
                            </ul>
                        </div>

                    </div>
                </div>
            </div>
            <div class="col-lg-9 order-lg-2 order-1">

                <div class="blog-wrapper">
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="single-blog-wrap mb-40">
                                <div class="latest-blog-content mt-0">
                                    <h4><a href="blog-details.html">@Model.Name</a></h4>
                                    <ul class="post-meta">
                                        <li class="post-author">By <a href="#">@Model.AuthorName </a></li>
                                        <li class="post-date">@Model.CreatedAt.ToString("MMMM dd yyyy")</li>
                                    </ul>
                                </div>
                                <div class="latest-blog-image">
                                    <a href="blog-details.html">
                                        <img src="~/assets/images/blog/@Model.DetailImage"
                                             alt="">
                                    </a>
                                </div>
                                <div class="latest-blog-content mt-20">

                                    <p>
                                        @Model.Content
                                    </p>

                                </div>

                                <div class="meta-sharing">
                                    <div class="row align-items-center">
                                        <div class="col-lg-6">
                                            <div class="entry-meta mt-15">
                                                Tags: @foreach (var item in Model.BlogTags)
                                                {
                                                    <a href="#">@item.Tag.Name,</a>
                                                }
                                            </div>
                                        </div>
                                        <div class="col-lg-6">
                                            <ul class="social-icons text-end">
                                                <li>
                                                    <a class="facebook social-icon" href="#" title="Facebook"
                                                       target="_blank">@Html.Raw(@setting.FbIcon)</a>
                                                </li>
                                                <li>
                                                    <a class="twitter social-icon" href="#" title="Twitter"
                                                       target="_blank">@Html.Raw(@setting.TwitterIcon)</a>
                                                </li>
                                                <li>
                                                    <a class="instagram social-icon" href="#" title="Instagram"
                                                       target="_blank">@Html.Raw(setting.InstagramIcon)</a>
                                                </li>
                                                <li>
                                                    <a class="linkedin social-icon" href="#" title="Linkedin"
                                                       target="_blank">@Html.Raw(setting.LinkedinIcon)</a>
                                                </li>
                                                <li>
                                                    <a class="rss social-icon" href="#" title="Rss"
                                                       target="_blank">@Html.Raw(setting.RssIcon)</a>
                                                </li>
                                            </ul>
                                        </div>
                                    </div>
                                </div>
                            </div>

                        </div>
                    </div>

                    <div class="related-post-blog-area">
                        <div class="row">
                            <div class="col-lg-12">
                                <div class="section-title">
                                    <h4>Related posts</h4>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            @foreach (var item in ViewBag.Blogs)
                            {
                                <div class="col-lg-4 col-md-6">
                                    <div class="single-latest-blog mt-30">
                                        <div class="latest-blog-image">
                                            <a href="blog-details.html">
                                                <img src="~/assets/images/blog/@item.Image"
                                                     alt="">
                                            </a>
                                        </div>
                                        <div class="latest-blog-content mt-20">
                                            <h4><a href="blog-details.html"> @item.Name</a></h4>
                                            <ul class="post-meta">
                                                <li class="post-date">@item.CreatedAt.ToString("MMM dd yyyy ")</li>
                                            </ul>
                                        </div>
                                    </div>
                                </div>
                            }

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



