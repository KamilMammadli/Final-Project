@model BlogViewModel
@{
    ViewData["Title"] = "Index";
}

<div class="breadcrumb-area">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <ul class="breadcrumb-list">
                    <li class="breadcrumb-item"><a href="index.html">Home</a></li>
                    <li class="breadcrumb-item active">Blogs </li>
                </ul>
            </div>
        </div>
    </div>
</div>

<div class="main-content-wrap blog-page">
    <div class="container">
        <div class="row">
            <div class="col-lg-3 order-lg-1 order-2">
                <div class="blog-sidebar-wrap section-pt">
                    <div class="blog-sidebar-widget-area">
                        <div class="single-widget search-widget mb-30">
                            <h4 class="widget-title">Search</h4>
                            <form action="#">
                                <div class="form-input">
                                    <input type="text" placeholder="Search... ">
                                    <button class="button-search" type="submit">
                                        <i class="icon-magnifier"></i>
                                    </button>
                                </div>
                            </form>
                        </div>

                        <div class="single-widget mb-30">
                            <h4 class="widget-title">Categories</h4>
                            <div class="category-widget-list">
                                <ul>
                                    <li><a href="#">Digital Watch </a></li>
                                    <li><a href="#">Digital clock </a></li>
                                    <li><a href="#">Category 1</a></li>
                                    <li><a href="#">Category 2</a></li>
                                    <li><a href="#">Category 3</a></li>
                                </ul>
                            </div>
                        </div>
                        <div class="single-widget mb-30">
                            <h4 class="widget-title">Recent Posts</h4>

                            <div class="recent-post-widget">
                                @foreach (var item in Model.Blogs)
                                {
                                    <div class="single-widget-post">
                                        <div class="post-thumb">
                                            <a href="#"><img src="~/assets/images/blog/@item.SmallImage" alt=""></a>
                                        </div>
                                        <div class="post-info">
                                            <h6 class="post-title"><a href="#">@item.Name</a></h6>
                                            <div class="post-date">@item.CreatedAt.ToString("MMM dd yyyy")</div>
                                        </div>
                                    </div>
                                }

                            </div>

                        </div>

                        <div class="single-widget mb-30">
                            <h4 class="widget-title">Tags</h4>

                            <ul class="sidebar-tag">
                                @foreach (var item in ViewBag.Tags)
                                {
                                    <li><a href="#">@item.Name</a></li>

                                }

                            </ul>
                        </div>

                    </div>
                </div>
            </div>
            <div class="col-lg-9 order-lg-2 order-1">

                <div class="blog-wrapper section-pt">
                    <div class="row">
                        @foreach (var item in Model.Blogs)
                        {
                            <div class="col-lg-6 col-md-6">
                                <div class="singel-latest-blog">
                                    <div class="articles-image">
                                        <a href="blog-details.html">
                                            <img src="~/assets/images/blog/@item.Image" alt="">
                                        </a>
                                    </div>
                                    <div class="aritcles-content">
                                        <div class="author-name">
                                            post by: <a href="#"> @item.AuthorName</a> - @item.CreatedAt.ToString("dd MMM yyyy")
                                        </div>
                                        <h4>
                                            <a href="blog-details.html" class="articles-name">
                                                @item.Content
                                            </a>
                                        </h4>
                                    </div>
                                </div>
                            </div>
                        }




                    </div>

                    <div class="paginatoin-area">
                        <div class="row">
                            <div class="col-lg-12 col-md-12">
                                <ul class="pagination-box">
                                    <li class="active"><a href="#">1</a></li>
                                    <li><a href="#">2</a></li>
                                    <li><a href="#">3</a></li>
                                    <li>
                                        <a class="Next" href="#">Next</a>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>

