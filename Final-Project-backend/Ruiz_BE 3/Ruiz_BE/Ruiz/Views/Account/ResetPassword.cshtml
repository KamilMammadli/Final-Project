@model ResetPasswordViewModel
@{
    ViewData["Title"] = "ResetPassword";
}

<div class="breadcrumb-area">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <ul class="breadcrumb-list">
                    <li class="breadcrumb-item"><a asp-action="index" asp-controller="home">Home</a></li>
                    <li class="breadcrumb-item active">Forgot Password </li>
                </ul>
            </div>
        </div>
    </div>
</div>

<div class="main-content-wrap section-ptb lagin-and-register-page">
    <div class="container">
        <div class="row">
            <div class="col-lg-7 col-md-12 m-auto">
                <div class="login-register-wrapper">
                    <div class="login-register-tab-list nav">
                        <a class="active" data-bs-toggle="tab" href="#lg1">
                            <h4> Forgot Password </h4>
                        </a>

                    </div>

                    <div class="tab-content">
                        <div id="lg1" class="tab-pane active">
                            <div class="login-form-container">
                                <div class="login-register-form">
                                    <form  method="post">
                                        <div class="login-input-box">
                                            <div class="text-danger" asp-validation-summary="ModelOnly"></div>
                                            <div class="row">
                                                <div class="col-lg-12 mb--20">
                                                    <label asp-for="Password">Password</label>
                                                    <input class="mb-0 form-control" asp-for="Password" placeholder="Enter your password">
                                                    <span class="text-danger" asp-validation-for="Password"></span>
                                                </div>
                                                <div class="col-lg-12 mb--20">
                                                    <label asp-for="ConfirmPassword">ConfirmPassoword</label>
                                                    <input class="mb-0 form-control" asp-for="ConfirmPassword" placeholder="Enter your confirm password">
                                                    <span class="text-danger" asp-validation-for="ConfirmPassword"></span>
                                                </div>
                                                <input type="hidden" name="Email" value="@Model.Email" />
                                                <input type="hidden" name="Token" value="@Model.Token" />

                                            </div>
                                        </div>
                                        <div class="button-box">

                                            <div class="button-box">
                                                <button class="login-btn btn"
                                                        type="submit">
                                                    <span>Reset</span>
                                                </button>
                                            </div>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
