@model UserRegisterViewModel

@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

        <div class="breadcrumb-area">
            <div class="container">
                <div class="row">
                    <div class="col-12">
                        <ul class="breadcrumb-list">
                            <li class="breadcrumb-item"><a href="index.html">Home</a></li>
                            <li class="breadcrumb-item active"> &amp; register</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>

        <div class="main-content-wrap section-ptb lagin-and-register-page">
            <div class="container">
                <div class="row">
                    <div class="col-lg-7 col-md-12 m-auto">
                        <div class="login-register-wrapper">
                            <div class="login-register-tab-list nav">
                                <a class="active" data-bs-toggle="tab" href="#lg2">
                                    <h4> register </h4>
                                </a>
                            </div>

                            <div class="tab-content">
                                <div id="lg2" class="tab-pane active">
                                    <div class="login-form-container">
                                        <div class="login-register-form">
                                            <form  method="post">
                                                <div class="login-input-box">
                                                    <div class="text-danger" asp-validation-summary="ModelOnly"></div>
                                                    <div class="row">
                                                        <div class="col-md-12 col-12 mb--15">
                                                            <label asp-for="FullName">Fullname</label>
                                                            <input class="mb-0 form-control" asp-for="FullName"
                                                                   placeholder="Enter your fullname">
                                                        </div>
                                                        <div class="col-12 mb--20">
                                                            <label asp-for="Email">Email</label>
                                                            <input class="mb-0 form-control" asp-for="Email" placeholder="Enter Your Email Address Here..">
                                                            <span class="text-danger" asp-validation-for="Email"></span>
                                                        </div>
                                                        <div class="col-12 mb--20">
                                                            <label asp-for="UserName">UserName</label>
                                                            <input class="mb-0 form-control" asp-for="UserName" placeholder="Enter Your UserName Address Here..">
                                                            <span class="text-danger" asp-validation-for="UserName"></span>
                                                        </div>
                                                        <div class="col-md-12 col-12 mb--15">
                                                            <label asp-for="Address1">Address</label>
                                                            <input class="mb-0 form-control" asp-for="Address1"
                                                                   placeholder="Enter your Address(important!)">
                                                        </div>
                                                        <div class="col-md-12 col-12 mb--15">
                                                            <label asp-for="Address2">Address2</label>
                                                            <input class="mb-0 form-control" asp-for="Address2"
                                                                   placeholder="Enter your second Address">
                                                        </div>
                                                        <div class="col-lg-6 mb--20">
                                                            <label asp-for="Password">Password</label>
                                                            <input class="mb-0 form-control" asp-for="Password" placeholder="Enter your password">
                                                            <span class="text-danger" asp-validation-for="Password"></span>

                                                        </div>
                                                        <div class="col-lg-6 mb--20">
                                                            <label asp-for="ConfirmPassword">Repeat Password</label>
                                                            <input class="mb-0 form-control" asp-for="ConfirmPassword" placeholder="Repeat your password">
                                                            <span class="text-danger" asp-validation-for="ConfirmPassword"></span>
                                                        </div>
                                                    </div>
                                                    <div class="button-box">
                                                        <button class="register-btn btn"
                                                                type="submit">
                                                            <span>Register</span>
                                                        </button>
                                                    </div>
                                                </div>
</form>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

       