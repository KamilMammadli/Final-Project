@model UserLoginViewModel
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="breadcrumb-area">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <ul class="breadcrumb-list">
                    <li class="breadcrumb-item"><a asp-action="index" asp-controller="home">Home</a></li>
                    <li class="breadcrumb-item active">login </li>
                </ul>
            </div>
        </div>
    </div>
</div>

<div class="main-content-wrap section-ptb lagin-and-register-page">
    <div class="container">
        <div class="row">
            <div class="col-lg-7 col-md-12 m-auto">
                <div class="login-register-wrapper">
                    <div class="login-register-tab-list nav">
                        <a class="active" data-bs-toggle="tab" href="#lg1">
                            <h4> login </h4>
                        </a>

                    </div>

                    <div class="tab-content">
                        <div id="lg1" class="tab-pane active">
                            <div class="login-form-container">
                                <div class="login-register-form">
                                    <form method="post">
                                        <div class="login-input-box">
                                            <div class="row">
                                                <div class="text-danger" asp-validation-summary="ModelOnly"></div>
                                                <div class="col-12 mb--20">
                                                    <label asp-for="UserName">Username</label>
                                                    <input class="mb-0 form-control" asp-for="UserName" placeholder="Enter Your Username  Here..">
                                                    <span class="text-danger" asp-validation-for="UserName"></span>
                                                </div>
                                                <div class="col-12 mb--20">
                                                    <label asp-for="Password">Password</label>
                                                    <input class="mb-0 form-control" asp-for="Password" placeholder="Enter Your Password  Here..">
                                                    <span class="text-danger" asp-validation-for="Password"></span>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="button-box">
                                            <div class="login-toggle-btn">
                                                <input type="checkbox">
                                                <label>Remember me</label>
                                                <a asp-action="forgotpassword">Forgot Password?</a>
                                            </div>
                                            <div class="button-box">
                                                <button class="login-btn btn"
                                                        type="submit">
                                                    <span>Login</span>
                                                </button>
                                            </div>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



