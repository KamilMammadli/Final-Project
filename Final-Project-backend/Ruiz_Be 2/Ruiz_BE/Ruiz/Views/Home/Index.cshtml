@model HomeViewModel
@{
    ViewData["Title"] = "Home Page";
}

<div class="hero-slider hero-slider-one">
    @foreach (var item in Model.Sliders)
    {
        <div class="single-slide" style="background-image: url(assets/images/slider/@item.BgImage)">
            <div class="hero-content-one container">
                <div class="row">
                    <div class="col-lg-12 col-md-12">
                        <div class="slider-content-text text-left">
                            <h5>@item.SubTitle</h5>
                            <h1>@item.Title</h1>
                            <p>
                                @item.Content
                            </p>
                            <p>Starting At <strong>@item.SubTitle2</strong></p>
                            <div class="slide-btn-group">
                                <a asp-controller="watch" asp-action="index" class="btn btn-bordered btn-style-1">@item.BtnText</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }



</div>


<div class="banner-area section-pt">
    <div class="container">
        <div class="row">
            <div class="col-lg-6 col-md-6">
                <div class="single-banner mb-30">
                    <a asp-controller="watch" asp-action="index"><img src="~/assets/images/banner/@Model.Setting.Banner1" alt=""></a>
                </div>
            </div>
            <div class="col-lg-6  col-md-6">
                <div class="single-banner mb-30">
                    <a asp-controller="watch" asp-action="index"><img src="~/assets/images/banner/@Model.Setting.Banner2" alt=""></a>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="product-area section-pb section-pt-30">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="section-title">
                    <h4> Products</h4>
                </div>
            </div>
        </div>

        <div class="row product-active-lg-4">
            @foreach (var item in Model.Watches.Take(4))
            {
                <div class="col-lg-12">
                    <div class="single-product-area mt-30">
                        <div class="product-thumb">
                            <a asp-controller="watch" asp-action="detail" asp-route-id="@item.Id">
                                <img class="primary-image" src="~/assets/images/product/@item.WatchImages.FirstOrDefault(x=>x.PosterStatus == false)?.Image" alt="">
                            </a>
                            @if (item.IsNew == true)
                            {
                                <div class="label-product label_new">New</div>

                            }
                            else
                            {
                                <div class="label-product label_new"></div>

                            }
                            <div class="action-links">
                                <a href="cart.html" class="cart-btn" title="Add to Basket">
                                    <i class="icon-basket-loaded"></i>
                                </a>
                                <a href="wishlist.html" class="wishlist-btn" title="Add to Wish List">
                                    <i class="icon-heart"></i>
                                </a>
                                <a asp-controller="watch" asp-action="detail" asp-route-id="@item.Id"><i class="icon-magnifier icons"></i></a>
                            </div>
                        </div>
                        <div class="product-caption">
                            <h4 class="product-name"><a asp-controller="watch" asp-action="detail" asp-action-id="@item.Id">@item.Name</a></h4>
                            <div class="price-box">
                                @if (item.DiscountedPrice != item.Price)
                                {
                                    <span class="new-price">$@item.DiscountedPrice</span>
                                    <span class="old-price">$@item.Price</span>
                                }
                                else
                                {
                                    <span class="price">$@item.Price</span>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            }


        </div>
    </div>
</div>
